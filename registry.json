{
    "$schema": "https://ui.shadcn.com/schema/registry.json",
    "name": "tomui",
    "homepage": "https://ui.tommerty.click",
    "items": [
        {
            "name": "adaptive-modal",
            "type": "registry:component",
            "title": "Adaptive Modal",
            "description": "A single modal that you can use to display any content, depending on if mobile or not. If you're viewing on a mobile device, the modal will always be a drawer. Using the variant prop you can choose between a sheet, dialog or popover.",
            "registryDependencies": ["dialog", "sheet", "popover"],
            "files": [
                {
                    "path": "registry/adaptive-modal/components/adaptive-modal.tsx",
                    "type": "registry:component",
                    "target": "components/tomui/adaptive.modal.tsx"
                },
                {
                    "path": "registry/adaptive-modal/hooks/use-mobile.tsx",
                    "type": "registry:hook"
                }
            ]
        },
        {
            "name": "code-snippet",
            "type": "registry:component",
            "title": "Code Snippet",
            "description": "A simple component to display a code snippet with a copy button, and multiple language options via tabs",
            "registryDependencies": ["tabs", "button", "prism-react-renderer"],
            "files": [
                {
                    "path": "registry/code-snippet/code-snippet.tsx",
                    "type": "registry:component",
                    "target": "components/tomui/code-snippet.tsx"
                }
            ]
        }
    ]
}
